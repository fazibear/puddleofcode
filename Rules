#!/usr/bin/env ruby

passthrough '/assets/**/*'

layout '/**/*.slim', :slim

preprocess do
  remove_drafts()
  add_pagination_for('/story/*', '/stories', 12)
  add_pagination_for('/til/*', '/tils', 5)
  add_pagination_for('/project/*', '/projects', 10)
end

compile /\/stories.*/ do
  layout '/stories.*'

  write path(item)
end

compile /\/tils.*/ do
  layout '/tils.*'

  write path(item)
end

compile /\/projects.*/ do
  layout '/projects.*'

  write path(item)
end

compile '/{story,til,project}/*.md' do
  filter :pandoc, from: :gfm, to: :html

  layout '/common.*'

  write path(item)
end

compile '/**/*.slim' do
  filter :slim

  layout '/default.*'

  write path(item)
end

compile '/**/*' do
  p "ups! #{item.identifier}"
end
