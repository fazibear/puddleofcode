#!/usr/bin/env ruby

passthrough '/assets/**/*'

compile '/**/*.slim' do
  filter :slim

  layout '/default.*'

  write item.identifier.without_ext + '.html'
end

compile '/story/*.md' do
  filter :redcarpet, options: {
    fenced_code_blocks: true
  }

  layout '/story.*'

  write item.identifier.without_ext + '/index.html'
end

